// Variables
accent=#1a8cff
black05=rgba(0,0,0,.05)
black25=rgba(0,0,0,.25)
white05=rgba(255,255,255,.05)
white10=rgba(255,255,255,.1)
white25=rgba(255,255,255,.25)
vendors=official

// Fonts
@font-face {
  font-family: 'Montserrat';
  src: url('../fonts/Montserrat-Regular.woff') format('woff');
  src: url('../fonts/Montserrat-Regular.woff2') format('woff2');
}
@font-face {
  font-family: 'Montserrat Light';
  src: url('../fonts/Montserrat-Light.woff') format('woff');
  src: url('../fonts/Montserrat-Light.woff2') format('woff2');
}

// Mixins
transition() {
  transition: .25s all ease;
}

fullWidth() {
  width: 100%;
  height: 100%;
}

hidden() {
  opacity: 0;
  visibility: hidden;
}

.hidden {
  opacity: 0;
  visibility: hidden;
}

visible() {
  opacity: 1;
  visibility: visible;
}

.visible {
  opacity: 1;
  visibility: visible;
}

noSelect() {
  user-select: none;
  pointer-events: none;
}

centerItem() {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

// General Styles
.placeholder {
  cursor: pointer;
}

::selection {
  color: white;
  background-color: accent;
}

html, body {
  margin: 0;
  padding: 0;
}

html, body, .page {
  fullWidth();
}

html {
  font-size: 10px;
}

body {
  font-family: 'Montserrat', sans-serif;
  font-size: 1.6rem;
  font-weight: 300;
  text-transform: uppercase;
  overflow: hidden;
}

a {
  text-decoration: none;
}

nav {
  display: flex;
  position: absolute;
  width: 100vw;
  height: 10rem;

  .links {
    display: flex;
    margin: auto;

    a {
      color: black25;
      font-size: 2.4rem;

      &:not(:last-of-type) {
        margin-right: 2rem;
      }
      &.active {
        color: #000;
      }
    }
  }

  .avatar {
    display: flex;
    margin: auto;

    .info {
      display: flex;
      margin: auto 1rem auto 0;
      flex-direction: column;
      text-align: right;

      .user {
        font-size: 1.6rem;
      }

      .profession {
        font-size: 1.2rem;
        color: black25;
      }
    }
    img {
      width: 5rem;
      height: 5rem;
      border-radius: 50%;
    }
  }
}

.page {
  display: flex;
}

.container {
  margin: auto;
}

.achievements {
  display: flex;
  flex-direction: column;

  .columns {
    display: flex;
    flex-direction: row;

    .column:first-of-type {
      margin-right: 1rem;
    }
  }
  .title {
    font-size: 1.8rem;
  }
}

.achievement {
  font-family: 'Montserrat Light';
  position: relative;
  display: flex;
  width: 45rem;
  height: 8rem;
  background-color: #000;
  border-radius: .4rem;
  color: #fff;
  font-size: 1.4rem;
  margin-bottom: 1rem;

  .content {
    display: flex;
    margin: auto;
    width: 100%;
    .name {
      line-height: 8rem;
    }
  }

  .icon {
    display: block;
    width: 5rem;
    height: 5rem;
    line-height: 5rem;
    text-align: center;
    color: #f2cc0c;
    border: 1px solid white25;
    border-radius: 50%;
    margin: auto 2rem;
  }

  .xp {
    position: absolute;
    right: 1rem;
    bottom: 1rem;
    color: white25;
    font-size: 1.2rem;
    line-height: 1;
  }
}
