.page {
  display: flex;
  flex-direction: column;
}

.container {
  display: flex;
  margin: auto;
}

.half {
  position: relative;
  overflow: hidden;
  display: flex;
  height: 50vh;
  background-color: #fff;

  &:nth-child(odd) {
    background-color: rgba(0,0,0,.05);
  }

  .title {
    letter-spacing: 2px;
    color: #000;
    text-indent: 10px;
    margin: 0;
  }

  img {
    display: block;
    height: 75%;
  }
}
.image-container {
  display: flex;

  & div {
    width: 25%;

    img {
      display: block;
      width: 100%;
      height: auto;
    }
  }
}

.showcase {
  position: relative;
  display: flex;

  span {
    font-size: 3.6rem;
    color: rgba(0,0,0,.25);
    position: absolute;
    width: 25%;
    top: 10%;
    text-align: center;
  }

  span:first-of-type {
    left: 0;
  }
  span:last-of-type {
    right: 0;
  }

  .container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin: auto;
    width: 50%;
    padding: 10rem 0;

    img {
      display: block;
      width: 100%;
      transition: .25s all ease;
      &:not(:last-child) {
        margin-bottom: 2rem;
      }
    }
  }
}

.video {
  span {
    top: 50%;
    transform: translateY(-50%);
  }
  video {
    width: 100%;
    height: auto;
  }
}


.description {
  display: flex;
  width: 50%;
  flex-direction: column;

  p {
    text-transform: none;
    font-size: 1.4rem;
    color: rgba(0,0,0,.75);
    line-height: 2;
  }
}

.section {
  margin-right: 2rem;
}

.title {
  display: flex;
  font-size: 1.6rem;
  letter-spacing: 2px;
  //animation: slideRight 1s transitionTiming;
  animation-fill-mode: both;
  margin-bottom: 2rem;

  span:first-child {
    animation: slantIn 1s ease;
    animation-fill-mode: both;
    margin-right: .5rem;
    color: accent;

  }

  span:last-child {
    animation: slideRight 1s ease;
    animation-fill-mode: both;
    animation-delay: .25s;
  }
}

.achievements {
  display: flex;
  flex-direction: column;

  .columns {
    display: flex;
    flex-direction: row;

    .column {
      width: 50%;

      &:first-of-type {
        margin-right: 1rem;
      }
    }
  }

  .achievement {
    cursor: pointer;
    font-family: 'Montserrat Light';
    position: relative;
    display: flex;
    width: 45rem;
    height: 8rem;
    background-color: #000;
    border-radius: .4rem;
    color: #fff;
    font-size: 1.4rem;
    //animation: fadeIn 2s ease;
    transition: .1s all transitionTiming;

    &:not(:last-of-type) {
      margin-bottom: 1rem;
    }

    &.animate {
      animation: growIn .5s ease;
      animation-fill-mode: both;
    }

    .content {
      transition: 1s all transitionTiming;
      display: flex;
      margin: auto;
      width: 100%;

      .name {
        line-height: 8rem;
      }
    }

    .icon {
      display: flex;
      width: 5rem;
      height: 5rem;
      line-height: 5rem;
      text-align: center;
      color: #f2cc0c;
      border: 1px solid white25;
      border-radius: 50%;
      margin: auto 2rem;
    }

    img {
      margin: auto;
    }

    .xp {
      position: absolute;
      right: 1rem;
      bottom: 1rem;
      color: white50;
      font-size: 1.2rem;
      line-height: 1;
    }
  }
}


@keyframes slantIn {
  0% {
    opacity: 0;
    transform: skewX(-25deg) translateY(-50%);
  }
  100% {
    transform: skewX(-25deg) translateY(0);
  }
}


.skills {
  display: flex;
  flex-direction: column;

  .title {
    span:first-child {
      animation-delay: 1.75s;
    }

    span:last-child {
      animation-delay: 2s;
    }
  }


.skill {
  display: flex;
  transform-origin: top;
  backface-visibility: hidden;
  opacity: 0;

  &.animate {
    animation: 2s swingIn transitionTiming;
    animation-fill-mode: both;

    .star {
      animation: 1s popIn transitionTiming;
      animation-fill-mode: both;
    }
  }

  &:not(:last-of-type) {
    margin-bottom: 1rem;
  }

  span {
    font-size: 1.2rem;
    text-transform: uppercase;
    text-align: center;
    position: relative;
    display: block;
    width: 12rem;
    height: 3.5rem;
    line-height: 3.5rem;
    margin-right: 2px;
    font-family: 'Montserrat Light';
    color: white50;
    transform: skew;

    &:after {
      z-index: -1;
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      content: "";
      //border: 1px solid accent;
      //box-sizing: border-box;
      background-color: #000;
      border-radius: 4px 0 0 4px;
    }
  }

  .stars {
    display: flex;
    position: relative;
    width: 15rem;
    height: 3.5rem;
    padding: 0 1rem;

    &:after {
      z-index: -1;
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      content: "";
      background-color: #000;
      transform: skew;
      border-radius: 0 4px 4px 0;
    }

    .star {
      margin: auto;
      width: 16px;
      height: 15px;
      background: url('https://dl.dropboxusercontent.com/u/3624979/star.svg') center center no-repeat;

      &.dim {
        opacity: .25;
      }
    }
  }
}
}
//Animations
@keyframes swingIn {
  0% {
    opacity: 0;
    transform: translateY(-25%);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideDown {
  0% {
    opacity: 0;
    transform: translateY(-25%);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  100% {
    opacity: 0;
    transform: translateY(25%);
  }
}

@keyframes slideRight {
  0% {
    opacity: 0;
    transform: translateX(-5%);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes popIn {
  0% {
    opacity: 0;
    transform: scale(0);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
@keyframes fadeOut {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
@keyframes growIn {
  0% {
    transform: scaleY(0);
  }
  100% {
    transform: scaleY(1);
  }
}


//First Achievement Column Staggered Animation
for num in (1..3) {
  .column:nth-child(1) .achievement:nth-child({num})
  {
    animation-delay: num * .25s + .25s;
  }
}

//Second Achievement Column Staggered Animation
for num in (1..3) {
  .column:nth-child(2) .achievement:nth-child({num})
  {
    animation-delay: num * .25s + .75s + .25s;
  }
}

//Skill Panel Delay
for num in (1..7) {
  .skill:nth-child({num})
  {
    animation-delay: num * 0.25s + 1s !important;
  }
}

for num in (1..5) {
  .skill:nth-child(1) .star:nth-child({num})
  {
    animation-delay: num * 0.25s + 1.5s !important;
  }
}

for num in (1..5) {
  .skill:nth-child(2) .star:nth-child({num})
  {
    animation-delay: num * 0.25s + 1.75s !important;
  }
}

for num in (1..5) {
  .skill:nth-child(3) .star:nth-child({num})
  {
    animation-delay: num * 0.25s + 2s !important;
  }
}

for num in (1..5) {
  .skill:nth-child(4) .star:nth-child({num})
  {
    animation-delay: num * 0.25s + 2.25s !important;
  }
}

for num in (1..5) {
  .skill:nth-child(5) .star:nth-child({num})
  {
    animation-delay: num * 0.25s + 2.5s !important;
  }
}

for num in (1..5) {
  .skill:nth-child(6) .star:nth-child({num})
  {
    animation-delay: num * 0.25s + 2.75s !important;
  }
}
for num in (1..5) {
  .skill:nth-child(7) .star:nth-child({num})
  {
    animation-delay: num * 0.25s + 3s !important;
  }
}

