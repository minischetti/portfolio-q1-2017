//General Phone
@media (max-width: 768px) {
  #profile, #particles-js, body:after {
    display: none;
  }

  footer {
    margin-bottom: 7rem;
  }

  h1 {
    font-size: 2.4rem;
    width: 100%;
    text-align: center;
  }
  .page {
    padding: 5rem 0;
  }
  .showcase {
    span {
      display: none;
    }

    .container {
      width: 100%;
      padding: 0;

      img:not(:last-child) {
        margin-bottom: 0;
      }

      .column {
        width: 100%;
        &:first-of-type {
          display: none;
        }
      }
    }
  }

  .half {
    min-height: 100vh;
    .container {
      width: 90%;
    }
  }

  .hero {
    min-height: 50vh;

    .title {
      font-size: 4.8rem;
    }
  }

  .title {
    width: 100%;
    text-align: center;
  }

  .card {
    width: 50%;
  }

  nav {
    background-color: black;
    height: 5rem;

    &.scroll {
      height: 5em;
    }

    .avatar {
      display: none;
      left: initial;
      right: 0;
      height: 7rem;
      transform: translateX(0);
      flex-direction: row;
      margin: auto 1rem;

      .user-avatar {
        order: 2;
      }

      .info {
        color: #fff;
        text-align: right;
        transform: translateY(0);
        margin: auto 1rem;
        opacity: 1 !important;
      }
    }
  }

  .image-container {
    flex-direction: column;

    div {
      width: 100%;

      &:not(:first-child) {
        display: none;
      }
    }
  }
  .social {
    position: fixed;
    top: 0;
    width: 100%;
    height: 5rem;
    background-color: #000;
    margin: 0;
  }

  .motion-container {
    top: 0%;
    left: 50%;
  }
}

