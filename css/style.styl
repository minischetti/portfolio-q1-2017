// Variables
accent=#1a8cff
black05=rgba(0,0,0,.05)
black25=rgba(0,0,0,.25)
white05=rgba(255,255,255,.05)
white10=rgba(255,255,255,.1)
white25=rgba(255,255,255,.25)
white50=rgba(255,255,255,.5)
transitionTiming=cubic-bezier(0.68, -0.55, 0.265, 1.55)
vendors=official
skew=skewX(-10deg)

// Fonts
@font-face {
  font-family: 'Montserrat';
  src: url('../fonts/Montserrat-Regular.woff') format('woff');
  src: url('../fonts/Montserrat-Regular.woff2') format('woff2');
}
@font-face {
  font-family: 'Montserrat Light';
  src: url('../fonts/Montserrat-Light.woff') format('woff');
  src: url('../fonts/Montserrat-Light.woff2') format('woff2');
}

// Mixins
fullWidth() {
  width: 100%;
  height: 100%;
}

noSelect() {
  user-select: none;
  pointer-events: none;
}

centerItem() {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

// General Styles
.placeholder {
  cursor: pointer;
}

::selection {
  color: white;
  background-color: accent;
}

html, body {
  margin: 0;
  padding: 0;
}

html, body, .page {
  fullWidth();
}

html {
  font-size: 10px;
}

h1 {
  font-size: 4.8rem;
  color: accent;
  letter-spacing: 10px;
  text-indent: 10px;
}

body {
  font-family: 'Montserrat', sans-serif;
  font-size: 1.6rem;
  font-weight: 300;
  text-transform: uppercase;
  overflow-x: hidden;

  &:after {
    fullWidth();
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    background: url("../assets/bg.jpg") no-repeat;
    background-size: cover;
    z-index: -2;
    opacity: .5;
  }
}

a {
  text-decoration: none;
}

.column {
  display: flex;
  flex-direction: column;
  width: 48%;

  &:first-child {
    margin-right: 2rem;
  }
}

nav {
  display: flex;
  position: absolute;
  width: 100%;
  height: 10rem;
  padding: 0 2rem;
  box-sizing: border-box;
  z-index: 1;

  &, * {
    transition: .5s all ease;
  }


  .nav, .avatar {
    flex: 1;
  }

  .nav {
    display: flex;
    margin: auto;

    .back {
      display: flex;
      position: relative;
      width: 5rem;
      height: 5rem;
      box-sizing: border-box;

      img {
        margin: auto;
      }

      &:after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        fullWidth();
        border: 1px solid rgba(255,255,255,.1);
        border-radius: 50%;
      }

      &:hover &:after {
        border-color: accent;
      }
    }
  }

  .avatar {
    display: flex;
    margin: auto;
    justify-content: flex-end;

    .info {
      display: flex;
      margin: auto 1rem auto 0;
      flex-direction: column;
      text-align: right;

      .user {
        font-size: 1.6rem;
      }

      .profession {
        font-size: 1.2rem;
        color: black25;
      }
    }
    img {
      width: 5rem;
      height: 5rem;
      border-radius: 50%;
    }
  }
  &.scroll {
    position: fixed;
    background-color: #000;
    height: 6rem;
    padding: 0 1rem 0 0;

    .avatar {
      img {
        width: 4rem;
        height: 4rem;
      }
      .user, .profession {
        color: #fff;
      }
      .user {
        font-size: 1.2rem;
      }
      .profession {
        opacity: .25;
      }
    }

    .back {
      width: 6rem;
      height: 6rem;

      &:after {
        border-radius: 0;
        border: 0;
      }
    }
  }
}

.button {
  overflow: hidden;
  position: absolute;
  left: 50%;
  bottom: 10%;
  font-size: 1.4rem;
  color: accent;
  border: 1px solid accent;
  border-radius: .4rem;
  transform: skew translate(-50%,-50%);
  padding: 1rem 2rem;
}

#home {
  display: flex;
  flex-direction: column;
  position: absolute;
  fullWidth();
  background-color: #000;
  z-index: 1;
  color: #fff;
  transition: .5s all ease;
  transition-delay: .5s;
  background-color: #000;
  //background-image: url("../assets/bgDark.jpg");
  //background-size: cover;

  &.active {
    transform: translateY(-100%);
  }

  h1 {
    transition: .5s all ease;
    position: absolute;
    top: 10%;
    left: 50%;
    transform: translate(-50%,-10%);
    color: white10;

    &.active {
      opacity: 0;
      top: 0;
    }
  }

  .user {
    cursor: pointer;
    display: flex;
    margin: auto;
    flex-direction: column;
    text-align: center;

    &:hover .user-avatar:after {
      opacity: 1;
      transform: scale(1.25);
    }

    .user-avatar {
      transition: .25s all ease;
      width: 10rem;
      height: 10rem;
      position: relative;
      margin: 2rem auto;
      animation: .5s growObject transitionTiming;


      img {
        border-radius: 50%;
        fullWidth();
      }

      @keyframes rotateObject {
        100% {
          transform: translateX(-50%) rotateZ(360deg);
        }
        }

      &:after {
        transition: .25s all ease;
        opacity: 0;
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        fullWidth();
        border-radius: 50%;
        border: 1px solid white10;
        box-sizing: border-box;
      }

      &.active {
        animation: .5s shrinkDown transitionTiming;
        animation-fill-mode: both;
      }
    }

    span {
      animation: 1s slideDown transitionTiming;
      animation-fill-mode: both;

      &.active {
        animation: .5s slideUp transitionTiming;
        animation-fill-mode: both;
      }
    }

    span:first-of-type {
      margin: .5rem 0;
    }
    span:last-of-type {
      font-size: 1.2rem;
      color: white50;
    }
  }

  @keyframes shrinkDown {
    0% {
      opacity: 1;
      transform: scale(1);
    }
    100% {
      opacity: 0;
      transform: scale(0);
    }
  }

  @keyframes growObject {
    0% {
      opacity: 0;
      transform: scale(0);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }
