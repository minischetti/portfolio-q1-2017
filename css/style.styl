// Variables
accent=#1a8cff
black05=rgba(0,0,0,.05)
black25=rgba(0,0,0,.25)
white05=rgba(255,255,255,.05)
white10=rgba(255,255,255,.1)
white25=rgba(255,255,255,.25)
vendors=official

// Fonts
@font-face {
  font-family: 'Montserrat';
  src: url('../fonts/Montserrat-Regular.woff') format('woff');
  src: url('../fonts/Montserrat-Regular.woff2') format('woff2');
}
@font-face {
  font-family: 'Montserrat Light';
  src: url('../fonts/Montserrat-Light.woff') format('woff');
  src: url('../fonts/Montserrat-Light.woff2') format('woff2');
}

// Mixins
transition() {
  transition: .25s all ease;
}

fullWidth() {
  width: 100%;
  height: 100%;
}

hidden() {
  opacity: 0;
  visibility: hidden;
}

.hidden {
  opacity: 0;
  visibility: hidden;
}

visible() {
  opacity: 1;
  visibility: visible;
}

.visible {
  opacity: 1;
  visibility: visible;
}

noSelect() {
  user-select: none;
  pointer-events: none;
}

centerItem() {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

// General Styles
.placeholder {
  cursor: pointer;
}

::selection {
  color: white;
  background-color: accent;
}

html, body {
  margin: 0;
  padding: 0;
}

html, body, .page {
  fullWidth();
}

html {
  font-size: 10px;
}

body {
  font-family: 'Montserrat', sans-serif;
  font-size: 1.6rem;
  font-weight: 300;
  text-transform: uppercase;
  overflow: hidden;
}

a {
  text-decoration: none;
}

nav {
  display: flex;
  position: absolute;
  width: 100vw;
  height: 10rem;

  .links {
    display: flex;
    margin: auto;

    a {
      color: black25;
      font-size: 2.4rem;

      &:not(:last-of-type) {
        margin-right: 2rem;
      }
      &.active {
        color: #000;
      }
    }
  }

  .avatar {
    display: flex;
    margin: auto;

    .info {
      display: flex;
      margin: auto 1rem auto 0;
      flex-direction: column;
      text-align: right;

      .user {
        font-size: 1.6rem;
      }

      .profession {
        font-size: 1.2rem;
        color: black25;
      }
    }
    img {
      width: 5rem;
      height: 5rem;
      border-radius: 50%;
    }
  }
}

.page {
  display: flex;
}

.container {
  display: flex;
  margin: auto;
}

.section {
  margin-right: 2rem;
}

.achievements {
  display: flex;
  flex-direction: column;

  .columns {
    display: flex;
    flex-direction: row;

    .column:first-of-type {
      margin-right: 1rem;
    }
  }
}

.title {
  font-size: 1.8rem;
}
.achievement {
  font-family: 'Montserrat Light';
  position: relative;
  display: flex;
  width: 45rem;
  height: 8rem;
  background-color: #000;
  border-radius: .4rem;
  color: #fff;
  font-size: 1.4rem;
  margin-bottom: 1rem;

  .content {
    display: flex;
    margin: auto;
    width: 100%;
    .name {
      line-height: 8rem;
    }
  }

  .icon {
    display: block;
    width: 5rem;
    height: 5rem;
    line-height: 5rem;
    text-align: center;
    color: #f2cc0c;
    border: 1px solid white25;
    border-radius: 50%;
    margin: auto 2rem;
  }

  .xp {
    position: absolute;
    right: 1rem;
    bottom: 1rem;
    color: white25;
    font-size: 1.2rem;
    line-height: 1;
  }
}

.skill {
  display: flex;
  animation: 2s swingIn cubic-bezier(0.68, -0.55, 0.265, 1.55);
  animation-fill-mode: both;
  transform-origin: top;
  backface-visibility: hidden;

  &:not(:last-child) {
    margin-bottom: 1rem;
  }

  span {
    font-size: 1.2rem;
    text-transform: uppercase;
    text-align: center;
    position: relative;
    display: block;
    width: 12rem;
    height: 3.5rem;
    line-height: 3.5rem;
    margin-right: 2px;
    font-family: 'Montserrat Light';
    color: white25;

    &:after {
      z-index: -1;
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      content: "";
      //border: 1px solid accent;
      //box-sizing: border-box;
      background-color: #000;
      transform: skewX(-10deg);
      border-radius: 4px 0 0 4px;
    }
  }

  .stars {
    display: flex;
    position: relative;
    width: 15rem;
    height: 3.5rem;
    padding: 0 1rem;

    &:after {
      z-index: -1;
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      content: "";
      background-color: #000;
      transform: skewX(-10deg);
      border-radius: 0 4px 4px 0;
    }

    .star {
      animation: .5s popIn cubic-bezier(0.68, -0.55, 0.265, 1.55);
      animation-fill-mode: both;
      margin: auto;
      width: 16px;
      height: 15px;
      background: url('https://dl.dropboxusercontent.com/u/3624979/star.svg') center center no-repeat;

      &.dim {
        opacity: .25;
      }
    }
  }
}

//Animations
@keyframes swingIn {
  0% {
    transform: rotateX(-90deg);
    opacity: 0;
  }
  100% {
    transform: rotateX(0deg);
    opacity: 1;
  }
}

@keyframes slideDown {
  0% {
    opacity: 0;
    transform: translateY(-5%);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes popIn {
  0% {
    opacity: 0;
    transform: scale(0);
  }
  100% {
    transform: scale(1);
  }
}

