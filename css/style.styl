  letter-spacing: 4px;
  opacity: 0;
  centerItem();
  width: 100%;
  text-align: center;

  span {
    color: #fff;
  }

  img {
    animation: 1s pokeLeft infinite;
  }
}

@keyframes pokeLeft {
  0% {
    transform: translateX(25%);
  }
  20% {
    transform: translateX(0);
  }
  40% {
    transform: translateX(25%);
  }
  80% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(25%);
  }
}

.hero:hover .view, .card:hover .view {
  transition-delay: .25s;
  opacity: 1;
}

